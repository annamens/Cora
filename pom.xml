<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.adaptivebiotech.test.functional</groupId>
    <artifactId>cora</artifactId>
    <version>1.0.5</version>
    <name>Adaptive Biotechnologies Functional Tests for Cora</name>
    <repositories>
        <repository>
            <id>adaptivebiotech-libs-release</id>
            <url>https://artifactory.dna.corp.adaptivebiotech.com/artifactory/libs-release</url>
        </repository>
        <repository>
            <id>adaptivebiotech-libs-snapshot-local</id>
            <url>https://artifactory.dna.corp.adaptivebiotech.com/artifactory/libs-snapshot-local</url>
        </repository>
        <repository>
            <id>adaptivebiotech-ext-release-local</id>
            <url>https://artifactory.dna.corp.adaptivebiotech.com/artifactory/ext-release-local</url>
        </repository>
    </repositories>
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <parallel>methods</parallel>
        <test.threads>1</test.threads>
        <test.env>test</test.env>
        <testng.verbose>1</testng.verbose>
    </properties>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.7.0</version>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-source-plugin</artifactId>
                <version>3.0.1</version>
                <executions>
                    <execution>
                        <id>attach-sources</id>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <version>3.2.0</version>
                <configuration>
                    <testDoctitle>${project.name} ${project.version}</testDoctitle>
                    <sourceFileIncludes>
                        <sourceFileInclude>**/*TestSuite.java</sourceFileInclude>
                    </sourceFileIncludes>
                    <tags>
                        <tag>
                            <name>sdlc.requirements</name>
                            <placement>a</placement>
                            <head>SDLC Requirements:</head>
                        </tag>
                    </tags>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-deploy-plugin</artifactId>
                <version>3.0.0-M1</version>
                <configuration>
                    <retryFailedDeploymentCount>3</retryFailedDeploymentCount>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.21.0</version>
                <configuration>
                    <parallel>${parallel}</parallel>
                    <threadCount>${test.threads}</threadCount>
                    <includes>
                        <include>**/*TestSuite.java</include>
                    </includes>
                    <systemPropertyVariables>
                        <project.version>${git.branch}</project.version>
                        <test.env>${test.env}</test.env>
                        <test.webdriver.wait>30</test.webdriver.wait>
                        <path.to.config>config/${test.env}.properties</path.to.config>
                        <sauce.user>automated.user3</sauce.user>
                        <sauce.key>e1a7d2b0-cdd5-4606-bfe9-9621da401859</sauce.key>
                        <sauce.tunnel>cora</sauce.tunnel>
                    </systemPropertyVariables>
                    <properties>
                        <surefire.testng.verbose>${testng.verbose}</surefire.testng.verbose>
                    </properties>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <version>3.1.0</version>
                <executions>
                    <execution>
                        <?m2e execute onConfiguration?>
                        <phase>compile</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>com.adaptivebiotech.test.utils</groupId>
                                    <artifactId>test-commons</artifactId>
                                    <includes>chromedriver*,geckodriver*</includes>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>target/test-classes</outputDirectory>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>pl.project13.maven</groupId>
                <artifactId>git-commit-id-plugin</artifactId>
                <version>3.0.0</version>
                <executions>
                    <execution>
                        <id>get-the-git-infos</id>
                        <goals>
                            <goal>revision</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>validate-the-git-infos</id>
                        <goals>
                            <goal>validateRevision</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
    <distributionManagement>
        <repository>
            <id>adaptivebiotech-libs-release-local</id>
            <url>https://artifactory.dna.corp.adaptivebiotech.com/artifactory/libs-release-local</url>
        </repository>
        <snapshotRepository>
            <id>adaptivebiotech-libs-snapshot-local</id>
            <url>https://artifactory.dna.corp.adaptivebiotech.com/artifactory/libs-snapshot-local</url>
        </snapshotRepository>
    </distributionManagement>
    <dependencies>
        <dependency>
            <groupId>com.adaptivebiotech.test.utils</groupId>
            <artifactId>test-commons</artifactId>
            <version>1.1.22-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>com.adaptivebiotech.test.functional</groupId>
            <artifactId>pipeline-plugins</artifactId>
            <version>1.0.0</version>
        </dependency>
        <dependency>
            <groupId>org.apache.poi</groupId>
            <artifactId>poi</artifactId>
            <version>4.1.2</version>
        </dependency>
    </dependencies>
</project>
